<mt-7>
  <h3>Edit course</h3>
  <form method="post" action="/courses/{{this._id}}?_method=PUT">
    <div class="form-group">
      <label class="form-label">Name</label>
      <input type="text" class="form-control" value="{{this.name}}"  name="name" />
    </div>
    <div class="form-group">
      <label class="form-label">Descriptions</label>
      <input type="text" class="form-control" value="{{this.descriptions}}" name="descriptions" />
    </div>
    <div class="form-group">
      <label class="form-label">Video</label>
      <input type="text" class="form-control" value="{{this.videoId}}" name="videoId" />
    </div>
    <div class="form-group">
      <label class="form-label">Image</label>
      <input type="text" class="form-control" value="{{this.image}}" name="image" />
    </div>
    <div class="form-group">
      <label class="form-label">Level</label>
      <input type="text" class="form-control" value="{{this.level}}" name="level" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</mt-7>